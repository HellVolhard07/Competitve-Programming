#include <iostream>

#define int long long
#define endl "\n"

using namespace std;

void solve()
{
    int g1, s1, b1, g2, s2, b2;
    cin>>g1>>s1>>b1>>g2>>s2>>b2;
    if((g1 + s1 + b1) > (g2 + s2 + b2)) {
        cout<<"1"<<endl;
    }
    else {
        cout<<"2"<<endl;
    }
}

int32_t main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;
    cin>>t;
    while(t--)
    {
        solve();
    }
	return 0;
}
