#include <iostream>
using namespace std;

void solve()
{
    int n, k;
    cin>>n>>k;
    int A[n];
    long long int sum = 0;
    for(int i=0;i<n;i++)
    {
        cin>>A[i];
        sum = sum + A[i];
    }
    if(sum%k==0)
    {
        std::cout << "0" << std::endl;
    }
    else
    {
        std::cout << "1" << std::endl;
    }
    
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;
    cin>>t;
    while(t--)
    {
        solve();
    }
	return 0;
}
